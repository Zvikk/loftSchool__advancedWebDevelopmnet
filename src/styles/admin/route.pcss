.route {
	&__container {
		display: flex;
		align-items: center;
	}

	&__title {
		color: #414c63;
	}

	&__controls {
		margin-left: 60px;
	}
}

@include phones {
    .route {
        &__container {
            flex-direction: column;
            align-items: flex-start;
        }

        &__controls {
            margin-left: 0;
            margin-top: 15px;
        }
    }
}