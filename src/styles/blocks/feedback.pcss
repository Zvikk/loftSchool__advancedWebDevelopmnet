.feedback {
	&__form-container {
		margin-top: 200px;
	}

	&__form {
		width: 60%;
		margin-top: 95px;
	}
}

// 768px
@include tablets {
	.feedback {
		&__form-container {
			margin-top: 120px;

			.section-title {
				text-align: center;
			}
		}

		&__form {
			width: 100%;
			margin-top: 60px;
		}
	}
}
